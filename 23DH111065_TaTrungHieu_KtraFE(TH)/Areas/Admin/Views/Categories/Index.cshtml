@model IEnumerable<_23DH111065_TaTrungHieu_KtraFE_TH_.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-info">TRANG DANH SÁCH DANH MỤC</h2>


<table class="table bg-light col-md-6">
    <tr>
        <th class="bg-info col-md-4">
            @*@Html.DisplayNameFor(model => model.CategoryName)*@

            TÊN DANH MỤC

        </th>
        <th class="bg-info col-md-2"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Cập Nhật", "Edit", new { id=item.CategoryID }, new { @class = "btn btn-primary btn-sm" }) |
            @*@Html.ActionLink("Chi Tiết", "Details", new { id=item.CategoryID }, new { @class = "btn btn-primary btn-sm" }) |*@
            @Html.ActionLink("Xoá", "Delete", new { id=item.CategoryID }, new { @class = "btn btn-primary btn-sm" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary btn-sm" })
</p>
