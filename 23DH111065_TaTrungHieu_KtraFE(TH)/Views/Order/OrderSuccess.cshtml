@model  _23DH111065_TaTrungHieu_KtraFE_TH_.Models.Order


@{
    ViewBag.Title = "OrderSuccess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Đặt hàng thành công!</h2>
    <p>Cảm ơn bạn đã đặt hàng. Đơn hàng của bạn đã được xử lý thành công.</p>

    <div class="order-summary">
        <h3>Thông tin đơn hàng</h3>
        <p><strong>Mã Đơn Hàng:</strong> @Model.OrderID</p>
        <p><strong>Ngày Đặt Hàng:</strong> @Model.OrderDate.ToString("dd/MM/yyyy")</p>
        <p><strong>Tổng Tiền:</strong> @Model.TotalAmount.ToString("C")</p>
        <p><strong>Trạng Thái:</strong> @Model.PaymentStatus</p>
    </div>

    <h4>Chi tiết sản phẩm trong đơn hàng</h4>
    <ul class="order-items">
        @foreach (var item in Model.OrderDetails)
        {
            <li>
                <strong>@item.Product.ProductName</strong> - Số lượng: @item.Quantity - Giá: @item.UnitPrice.ToString("C")
            </li>
        }
    </ul>

    <div class="next-steps">
        <h4>Bước tiếp theo</h4>
        <p>Bạn có thể theo dõi trạng thái đơn hàng của mình trong tài khoản hoặc liên hệ với chúng tôi nếu có bất kỳ câu hỏi nào.</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Trở về trang chủ</a>
        <a href="@Url.Action("MyOrders", "Order")" class="btn btn-secondary">Xem đơn hàng của tôi</a>
    </div>
</div>

<style>
    .order-summary, .next-steps {
        border: 1px solid #ddd;
        padding: 15px;
        margin-top: 20px;
        border-radius: 5px;
    }

    .order-items {
        list-style-type: none;
        padding: 0;
    }

        .order-items li {
            margin-bottom: 10px;
        }
</style>

