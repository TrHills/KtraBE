@model  _23DH111065_TaTrungHieu_KtraFE_TH_.Models.ViewModel.HomeProductVM

<link rel="stylesheet" type="text/css" href="~/Content/myStyle/CustomerHome.css" />
<style>
    .feature-container {
        display: flex; /* Đưa các sản phẩm vào cùng một hàng */
        overflow-x: auto; /* Cho phép cuộn ngang */
        gap: 15px; /* Khoảng cách giữa các sản phẩm */
        padding: 10px 0; /* Thêm khoảng cách ở hai đầu */
    }

    .fproduct-item {
        flex: 0 0 auto; /* Sản phẩm sẽ không co giãn và giữ kích thước */
        width: 200px; /* Chiều rộng của mỗi sản phẩm, bạn có thể điều chỉnh */
        border: 1px solid #ddd; /* Đường viền cho mỗi sản phẩm */
        padding: 10px;
        box-sizing: border-box;
    }

    .featureProd {
        overflow: hidden; /* Ẩn bất kỳ phần tràn ngoài vùng hiển thị */
        margin-bottom: 20px; /* Khoảng cách phía dưới */
    }

    h2 {
        text-align: center;
        margin-bottom: 15px;
    }
    .fproduct-item {
        flex: 0 0 auto; /* Sản phẩm không co giãn và giữ kích thước */
        width: 200px; /* Chiều rộng của mỗi sản phẩm */
        border: 2px solid #000; /* Viền màu xám nhạt cho mỗi sản phẩm */
        border-radius: 8px; /* Bo tròn góc của viền */
        padding: 10px;
        box-sizing: border-box; /* Đảm bảo padding không làm thay đổi kích thước */
        background-color: #fff; /* Màu nền trắng cho từng sản phẩm */
    }

        .fproduct-item:hover {
            border-color: #007bff; /* Đổi màu viền khi hover (chẳng hạn màu xanh dương) */
        }
</style>
@if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
{
    <section class="container-fluid featureProd">
        <h2>Sản phẩm nổi bật</h2>
        <div class="feature-container">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="fproduct-item">
                    <div>
                        <a href="@Url.Action("ProductDetail", "Home", new { id=product.ProductID})">
                            <img src="@Html.DisplayFor(modelItem => product.ProductImage)" />

                        </a>
                    </div>
                    <div>
                        <p class="prodPrice"><font>@String.Format("{0:#,0}", product.ProductPrice@*@Html.DisplayFor(modelItem => product.ProductPrice)*@) VNĐ </font></p>
                        <p class="prodName">@Html.DisplayFor(modelItem => product.ProductName) </p>
                        <p class="prodCate">@Html.DisplayFor(modelItem => product.Category.CategoryName) </p>
                        <p class="prodSale">
                            Đã bán: &nbsp; @Html.DisplayFor(modelItem => product.OrderDetails.Count)
                        </p>
                    </div>
                    <div class="button-container">
                        <a class="button button-details" style="text-decoration:none" href="/Home/ProductDetails/@product.ProductID">
                            <b>Xem chi tiết</b>
                        </a>
                    </div>
                </div>
            }

        </div>
    </section>
    <hr />
}