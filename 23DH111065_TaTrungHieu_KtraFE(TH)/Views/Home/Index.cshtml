@model _23DH111065_TaTrungHieu_KtraFE_TH_.Models.ViewModel.HomeProductVM

@{
    ViewBag.Title = "Customer Home Page";
    <link rel="stylesheet" type="text/css" href="~/Content/myStyle/CustomerHome.css" />
}
<head>
    <style>
        img {
            height: 100px;
            max-width: 100px;
        }
        .banner-content {
            text-align: center; /* Căn giữa nội dung */
            padding: 50px; /* Thêm khoảng cách bên trong */
            background-color: #f8f9fa; /* Màu nền nhẹ */
            border-radius: 10px; /* Bo góc cho banner */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Đổ bóng nhẹ cho banner */
            margin: 20px auto; /* Tạo khoảng cách bên ngoài và căn giữa */
            max-width: 600px; /* Giới hạn chiều rộng tối đa của banner */
        }

            .banner-content h2 {
                font-size: 28px; /* Kích thước chữ cho tiêu đề */
                color: #343a40; /* Màu chữ cho tiêu đề */
                margin-bottom: 20px; /* Khoảng cách bên dưới tiêu đề */
            }

            .banner-content p {
                font-size: 18px; /* Kích thước chữ cho đoạn văn */
                color: #6c757d; /* Màu chữ cho đoạn văn */
                margin-bottom: 30px; /* Khoảng cách bên dưới đoạn văn */
            }

            .banner-content .btn {
                padding: 10px 20px; /* Khoảng cách bên trong cho nút */
                font-size: 16px; /* Kích thước chữ cho nút */
                border-radius: 5px; /* Bo góc cho nút */
                text-decoration: none; /* Xóa gạch chân */
                transition: background-color 0.3s; /* Hiệu ứng chuyển màu nền */
            }

            .banner-content .btn-primary {
                background-color: #007bff; /* Màu nền cho nút chính */
                color: white; /* Màu chữ cho nút chính */
            }

                .banner-content .btn-primary:hover {
                    background-color: #0056b3; /* Màu nền khi di chuột qua nút */
                }
    </style>
</head>
@*PHẦN BANNER*@
<div style="text-align:Center" " class="banner-content">
   
    <h2><br />CHÀO MỪNG ĐẾN VỚI TRANG WEB SỐ 1 VIỆT NAM</h2>
    <p>Hàng Ngàn Sản Phẩm Đang Được Rao Bán</p>
    <a href="#" class="btn btn-primary">Bắt đầu mua sắm</a>
</div>
@*PHẦN TÌM KIẾM SẢN PHẨM*@
<section style="text-align:Center" class="container-fluid searchProd">
    <h2>Tìm kiếm sản phẩm</h2>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <div class="form-group search-container">
            @Html.TextBoxFor(m => m.SearchTerm, new
       {
           @class = " search-input",
           placeholder = "Bạn cần tìm gì ?"
       })
            <button type="submit" class="btn btn-primary">Tìm Kiếm</button>
        </div>
    }
</section>
@*PHẦN SẢN PHẨM NỔI BẬT*@
@Html.Partial("_PVFeatureProduct", Model)


@*SẢN PHẨM MỚI*@
@Html.Partial("_PVNewProduct", Model)